<div class="my-3 d-flex justify-content-between align-items-center">
  <h1>Foydalanuvchilar</h1>
  <a href="/users/create" class="btn btn-primary" role="button">Foydalanuvchi qo'shish</a>
</div>
<table class="table table-hover table-bordered">
  <thead>
    <tr class="table-secondary">
      <th class="col-1" scope="col">#</th>
      <th scope="col">Ism-sharif</th>
      <th scope="col">Yosh</th>
      <th scope="col">Rol</th>
      <th scope="col">Login</th>
      <th class="col-2" scope="col">Amallar</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach((user, i)=> { %>
      <tr>
        <th scope="row">
          <%= i + 1 %>
        </th>
        <td>
          <%= `${user.firstName} ${user.lastName}` %>
        </td>
        <td>
          <%= user.age %>
        </td>
        <td>
          <%= user.role==='admin' ? 'Admin' : 'Ishchi' %>
        </td>
        <td>
          <%= user.username %>
        </td>
        <td class="d-flex gap-2">
          <a class="btn btn-link" href="/users/<%= user.id %>">Ko'rish</a>
          <a class="btn btn-outline-warning" href="/users/<%= user.id %>/edit">Tahrirlash</a>
          <form class="d-inline" action="/users/<%= user.id %>/delete" method="post">
            <button class="btn btn-outline-danger" type="submit">O'chirish</button>
          </form>
        </td>
      </tr>
      <% }) %>
  </tbody>
</table>
<%- include('../partials/paging.ejs', { pageInfo}) %>