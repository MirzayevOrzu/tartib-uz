<div class="card mt-3" style="width: 18rem;">
  <img src="<%= user.avatar ? `/uploads/${user.avatar}` : '/static/images/default-avatar.png' %>" class="card-img-top " alt="...">
  <div class="card-body">
    <h5 class="card-title">
      <%= `${user.firstName} ${user.lastName}` %>
    </h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Login: @<%= user.username %>
    </li>
    <li class="list-group-item">Yoshi: <%= user.age %>
    </li>
    <li class="list-group-item">Rol: <%= user.role==='admin' ? 'Admin' : 'Ishchi' %>
    </li>
  </ul>
  <div class="card-body">
    <a href="/users/profile/edit" class="btn btn-outline-warning me-3">Tahrirlash</a>
  </div>
</div>